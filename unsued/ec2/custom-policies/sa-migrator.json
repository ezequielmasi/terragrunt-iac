{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket",
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:PutObject",
                "s3:PutObjectAcl"
            ],
            "Resource": [
            "arn:aws:s3:::usmon-prod-screenshots-us-west-2/*",
            "arn:aws:s3:::usmon-prod-screenshots-us-west-2",
            "arn:aws:s3:::usmon-prod-uploads-us-west-2/*",
            "arn:aws:s3:::usmon-prod-uploads-us-west-2"
            ]
        },
        {
            "Effect": "Allow",
            "Action": "s3:ListAllMyBuckets",
            "Resource": "arn:aws:s3:::*"
        }    
    ]
}
